@page "/admin"
@rendermode InteractiveServer
@inject MiniEshopBlazor.Services.AuthService AuthService
@inject NavigationManager Navigation

<div class="auth-center">
    <div class="card-x auth-cardx">
        <div class="card-x-body">
            <div class="auth-top">
                <span class="badge">ADMIN</span>
                <h3 class="page-title" style="margin: 10px 0 6px 0;">Σύνδεση Διαχειριστή</h3>
                <p class="text-muted2" style="margin:0;">Εισάγετε τα στοιχεία σας για πρόσβαση στο admin panel.</p>
            </div>

            <div class="mt-3">
                <label class="auth-label">Username</label>
                <input class="auth-input"
                       placeholder="π.χ. admin"
                       autocomplete="username"
                       @bind="username" />

                <label class="auth-label mt-3">Password</label>
                <input class="auth-input"
                       type="password"
                       placeholder="••••••••"
                       autocomplete="current-password"
                       @bind="password" />

                @if (!string.IsNullOrWhiteSpace(errorMessage))
                {
                    <div class="auth-alert mt-3">@errorMessage</div>
                }

                <button class="btn btn-primary full-width mt-3" @onclick="HandleLogin">
                    Σύνδεση
                </button>

                <div class="auth-foot mt-3">
                    <a href="/" class="auth-link">← Επιστροφή στο κατάστημα</a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string username;
    private string password;
    private string errorMessage;

    private void HandleLogin()
    {
        errorMessage = null;

        if (string.IsNullOrWhiteSpace(username) || string.IsNullOrWhiteSpace(password))
        {
            errorMessage = "Συμπλήρωσε username και password.";
            return;
        }

        if (AuthService.Login(username.Trim(), password))
        {
            Navigation.NavigateTo("/admin/products");
        }
        else
        {
            errorMessage = "Λάθος στοιχεία εισόδου.";
        }
    }
}
